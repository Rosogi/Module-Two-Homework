<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="2.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lesson4.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TextArea fx:id="messagesTextArea" editable="false" prefHeight="278.0" prefWidth="270.0" VBox.vgrow="ALWAYS" />
      <HBox prefHeight="27.0" prefWidth="300.0">
         <children>
            <TextField fx:id="messageTextField" onKeyPressed="#sendButtonViaKey" prefHeight="27.0" prefWidth="174.0" promptText="Введите сообщение" HBox.hgrow="ALWAYS" />
            <Button fx:id="sendButton" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#sendButtonViaPress" text="Отправить" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
